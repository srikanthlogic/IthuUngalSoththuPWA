# Chennai MTC Bus Tracker PWA Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# REQUIRED ENVIRONMENT VARIABLES
# =============================================================================

# Gemini API Key for AI features (if used)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration
# Backend URL for API proxy (configured in Edge Function - see api/proxy.ts)
# BACKEND_URL=https://api.mtc-bus-tracker.com

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_WINDOW_MINUTES=15

# Authentication Secret for JWT tokens
AUTH_SECRET=your_jwt_secret_key_here

# Application Configuration
# Environment (development, staging, production)
ENVIRONMENT=production
NODE_ENV=production

# Deployment URL (automatically set by Vercel)
VERCEL_URL=https://your-app.vercel.app

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level for production (error, warn, info, debug)
LOG_LEVEL=info

# Enable structured logging (true/false)
LOG_STRUCTURED=true

# =============================================================================
# PWA CONFIGURATION
# =============================================================================

# PWA Application Name
VITE_APP_NAME=Chennai MTC Bus Tracker

# PWA Short Name
VITE_APP_SHORT_NAME=MTC Tracker

# PWA Description
VITE_APP_DESCRIPTION=Live tracking of Chennai MTC buses with accountability features

# PWA Theme Color
VITE_THEME_COLOR=#1f2937

# PWA Background Color
VITE_BACKGROUND_COLOR=#ffffff

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL for frontend requests
VITE_API_BASE_URL=https://api.mtc-bus-tracker.com/api

# API Timeout in milliseconds
VITE_API_TIMEOUT=10000

# API Retry attempts
VITE_API_RETRY_ATTEMPTS=3

# API Retry delay in milliseconds
VITE_API_RETRY_DELAY=1000

# Enable API request caching
VITE_API_CACHE_ENABLED=true

# API cache duration in seconds
VITE_API_CACHE_DURATION=300

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=https://your-app.vercel.app,https://www.your-app.com

# Enable HTTPS enforcement
HTTPS_ENFORCED=true

# Session timeout in minutes
SESSION_TIMEOUT=480

# Enable CSRF protection
CSRF_PROTECTION=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Enable service worker caching
VITE_SW_CACHE_ENABLED=true

# Service worker cache version
VITE_SW_CACHE_VERSION=1.0.0

# Enable lazy loading for images
VITE_LAZY_LOADING=true

# Image optimization quality (0-100)
VITE_IMAGE_QUALITY=85

# Enable compression
VITE_COMPRESSION_ENABLED=true

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Google Analytics ID (optional)
# VITE_GA_ID=GA-XXXXXXXXX

# Error Tracking (Sentry, LogRocket, etc.)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable error reporting
VITE_ERROR_REPORTING=true

# Enable performance monitoring
VITE_PERFORMANCE_MONITORING=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable map functionality
VITE_ENABLE_MAP=true

# Enable push notifications
VITE_ENABLE_NOTIFICATIONS=false

# Enable offline mode
VITE_ENABLE_OFFLINE=true

# Enable data export features
VITE_ENABLE_EXPORT=true

# Enable debug mode (set to false in production)
VITE_DEBUG_MODE=false

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default language (en, ta)
VITE_DEFAULT_LANGUAGE=en

# Enable RTL support
VITE_RTL_SUPPORT=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development tools (only for development)
# VITE_DEV_TOOLS=false

# Mock API responses for testing
# VITE_MOCK_API=false

# Enable hot reload (development only)
# VITE_HOT_RELOAD=false