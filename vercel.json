{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "NODE_ENV": "production",
    "ENVIRONMENT": "production",
    "BACKEND_URL": "https://api.mtc-bus-tracker.com",
    "LOG_LEVEL": "info",
    "LOG_STRUCTURED": "true",
    "RATE_LIMIT_REQUESTS_PER_MINUTE": "100",
    "RATE_LIMIT_WINDOW_MINUTES": "15",
    "HTTPS_ENFORCED": "true",
    "SESSION_TIMEOUT": "480",
    "CSRF_PROTECTION": "true",
    "VITE_SW_CACHE_ENABLED": "true",
    "VITE_SW_CACHE_VERSION": "1.0.0",
    "VITE_LAZY_LOADING": "true",
    "VITE_IMAGE_QUALITY": "85",
    "VITE_COMPRESSION_ENABLED": "true",
    "VITE_ENABLE_MAP": "true",
    "VITE_ENABLE_NOTIFICATIONS": "false",
    "VITE_ENABLE_OFFLINE": "true",
    "VITE_ENABLE_EXPORT": "true",
    "VITE_DEBUG_MODE": "false",
    "VITE_DEFAULT_LANGUAGE": "en",
    "VITE_RTL_SUPPORT": "false",
    "VITE_ERROR_REPORTING": "true",
    "VITE_PERFORMANCE_MONITORING": "true",
    "VITE_API_CACHE_ENABLED": "true",
    "VITE_API_CACHE_DURATION": "300",
    "VITE_API_TIMEOUT": "10000",
    "VITE_API_RETRY_ATTEMPTS": "3",
    "VITE_API_RETRY_DELAY": "1000"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Accept, Authorization, X-API-Key"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webp|woff|woff2))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "src": "api/**/*.ts",
    "engine": "@vercel/edge"
  },
  "regions": ["sin1"],
  "crons": [],
  "autoRollback": {
    "enabled": true,
    "failureThreshold": 3,
    "monitoringPeriod": 300
  },
  "healthCheck": {
    "enabled": true,
    "path": "/api/health",
    "method": "GET",
    "timeout": 30000,
    "retries": 3,
    "headers": {
      "User-Agent": "Vercel-Health-Check"
    }
  },
  "monitoring": {
    "enabled": true,
    "alerts": [
      {
        "type": "deployment-failure",
        "channels": ["email", "slack"]
      },
      {
        "type": "health-check-failure",
        "channels": ["email", "slack"]
      }
    ]
  },
  "rollback": {
    "enabled": true,
    "automatic": true,
    "notificationChannels": ["email", "slack"],
    "requireApproval": false
  }
}